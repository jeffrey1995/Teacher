<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fra_publish_do"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--求职标题-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_height"
            android:layout_marginTop="@dimen/margin_middle"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_Prompt"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/prompt_do_title" />

            <EditText
                android:id="@+id/et_Title"
                style="@style/EditText"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="5"
                android:hint="请输入做家教标题"
                android:maxLength="20"
                android:maxLines="1"
                android:singleLine="true" />

        </LinearLayout>

        <!--科目-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_height"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_Prompt"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/prompt_do_subject" />

            <Button
                android:id="@+id/btn_Subject"
                style="@style/Button_Select"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="5"
                android:text="@string/option_click_to_choose" />

        </LinearLayout>

        <!--年级-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_height"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_Prompt"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/prompt_do_grade" />

            <Button
                android:id="@+id/btn_Grade"
                style="@style/Button_Select"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="5"
                android:text="@string/option_click_to_choose" />

        </LinearLayout>

        <!--时间-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_height"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_Prompt"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/prompt_do_time" />

            <Button
                android:id="@+id/btn_Time"
                style="@style/Button_Select"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="5"
                android:text="@string/option_click_to_choose" />

        </LinearLayout>

        <!--薪酬-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_height"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_Prompt"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/prompt_do_salary" />

            <EditText
                android:id="@+id/et_Salary"
                style="@style/EditText"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="3"
                android:hint="@string/hint_find_salary" />

            <TextView
                style="@style/TextView_Prompt"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:inputType="number"
                android:maxLength="7"
                android:maxLines="1"
                android:singleLine="true"
                android:text="元/小时"/>

        </LinearLayout>

        <!--个人简介-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bigger_height"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_Prompt"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/prompt_do_self_description" />

            <EditText
                android:id="@+id/et_Description"
                style="@style/EditText"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="5"
                android:hint="请输入个人简介" />
        </LinearLayout>

        <!--工作地址-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bigger_height"
            android:layout_marginTop="@dimen/margin_middle"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_Prompt"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/prompt_do_work_area" />

            <EditText
                android:id="@+id/et_Address"
                style="@style/EditText"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="5"
                android:hint="@string/hint_find_address" />

        </LinearLayout>

        <!--电话-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_height"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_Prompt"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/prompt_do_phone" />

            <EditText
                android:id="@+id/et_Phone"
                style="@style/EditText"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="5"
                android:hint="请输入联系电话"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:singleLine="true" />

        </LinearLayout>

        <!--允许公开联系方式-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_height"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_Permit"
                style="@style/CheckBox_Yellow"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginStart="@dimen/padding"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/option_do_allow_phone" />
        </LinearLayout>

        <!--联系人-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_height"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_Prompt"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/prompt_do_linkman" />

            <EditText
                android:id="@+id/et_Name"
                style="@style/EditText"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="5"
                android:hint="请输入联系人姓名"
                android:maxLength="15"
                android:maxLines="1"
                android:singleLine="true" />

        </LinearLayout>

        <!--同意条款-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_height"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_Agreement"
                style="@style/CheckBox_Yellow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginStart="@dimen/padding"
                android:checked="true"
                android:text="@string/option_agree" />

        </LinearLayout>

        <!--提交按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_Submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_height"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/round_button"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_size_middle" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
