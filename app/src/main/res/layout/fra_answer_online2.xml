<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/question_summary"/>

        <EditText
            android:id="@+id/question_summary"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:hint="@string/question_summary_please"
            android:gravity="top|left"
            android:textColorHint="#c5bfac"
            android:background="@drawable/edit_text_background"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="问题补充："/>

        <EditText
            android:id="@+id/question_detail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="top|left"
            android:hint="@string/question_detail"
            android:textColorHint="#c5bfac"
            android:background="@drawable/edit_text_background"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp">

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="@string/anonymous"/>

        <ImageView
            android:id="@+id/checkbox2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/text2"
            android:layout_marginRight="5dp"
            android:src="@drawable/unchecked"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/checkbox2"
            android:layout_marginRight="10dp"
            android:text="@string/remind_me"/>

        <ImageView
            android:id="@+id/checkbox1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/text1"
            android:layout_marginRight="5dp"
            android:src="@drawable/unchecked"/>
    </RelativeLayout>

    <Button
        android:id="@+id/submit_question"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_button"
        android:text="@string/commit_question"/>
</LinearLayout>
