<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/friend_rl"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="这是标题"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/mytask_time"/>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_time"
            android:layout_alignBottom="@id/iv_time"
            android:layout_marginLeft="5dp"
            android:text="2016.03.21"
            android:textSize="12sp"
            />
        <ImageView
            android:id="@+id/iv_content"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/mytask_content"
            android:layout_alignBottom="@id/iv_time"
            android:layout_toRightOf="@id/tv_date"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_time"
            android:layout_toRightOf="@id/iv_content"
            android:layout_marginLeft="5dp"
            android:text="内容" />

        <hc.teacher.user_defined_widget.RoundImageView
        android:id="@+id/iv_teacherHead"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        />
        <TextView
            android:id="@+id/tv_teacherNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="teacher"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_below="@id/iv_teacherHead"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_teacherHead"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text="老师"
            />




    </RelativeLayout>

</LinearLayout>
