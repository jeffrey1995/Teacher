    <RelativeLayout
        android:id="@+id/circle_title_rl"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/theme_color"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
