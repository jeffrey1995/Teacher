<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme" parent="Theme.AppCompat.Light"></style>

    <style name="CheckBox_Yellow">
        <item name="android:button">@drawable/checkbox_yellow</item>
        <item name="android:textColor">#847F7F</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="TextView_Prompt">
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:textColor">#9C9C9A</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditText">
        <item name="android:background">@color/color_white</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">#9C9C9A</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:textCursorDrawable">@drawable/theme_color_cusor</item>
    </style>

    <style name="Button_Select">
        <item name="android:background">@color/color_white</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#9C9C9A</item>
        <item name="android:textSize">@dimen/font_size_middle</item>
    </style>

    <style name="RadioButton">
        <item name="android:button">@drawable/radio_button</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">#9C9C9A</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
